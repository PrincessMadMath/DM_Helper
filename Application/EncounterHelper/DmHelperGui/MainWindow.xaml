        xmlns:panels="clr-namespace:DmHelperGui.Panels"
        Title="DM Helper" Height="400" Width="800">
    <DockPanel  Margin="10">

        <StackPanel HorizontalAlignment="Center" DockPanel.Dock="Right">
            <panels:EncounterSimulation></panels:EncounterSimulation>
        </StackPanel>
        <StackPanel DockPanel.Dock="Top">
            <panels:MonsterRepoLoader/>
