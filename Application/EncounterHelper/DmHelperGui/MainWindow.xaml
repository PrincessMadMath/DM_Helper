<Window x:Class="DmHelperGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:panels="clr-namespace:DmHelperGui.Panels"
        Title="DM Helper" Height="350" Width="525">
    <DockPanel  Margin="10">

        <StackPanel HorizontalAlignment="Center" DockPanel.Dock="Right" Margin="0,0,0,10" Width="230">
            <Button Name="btnGenerateEnconter" Click="btnGenerateEncounter_Click">Start</Button>
            <Grid Height="250">
                <ScrollViewer>
                    <TextBlock Name="txtEncounterDescription" Margin="10,0,0,0">Description</TextBlock>
                </ScrollViewer>
            </Grid>

        </StackPanel>
        <StackPanel DockPanel.Dock="Top">
            <panels:MonsterRepoLoader/>
            <panels:EncounterSelector></panels:EncounterSelector>
            

        </StackPanel>


    </DockPanel>


</Window>
