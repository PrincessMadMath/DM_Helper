<Window x:Class="DmHelperGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:panels="clr-namespace:DmHelperGui.View"
        xmlns:view="clr-namespace:DmHelperGui.View"
        Title="DM Helper" Height="400" Width="800">
    <DockPanel  Margin="10">

        <StackPanel HorizontalAlignment="Center" DockPanel.Dock="Right">
            <view:EncounterSimulation></view:EncounterSimulation>
        </StackPanel>
        <StackPanel DockPanel.Dock="Top">
            <view:MonsterDatabaseLoader/>
            <view:SpellDatabaseLoadder/>
            <view:EncounterSelector></view:EncounterSelector>
        </StackPanel>


    </DockPanel>


</Window>



