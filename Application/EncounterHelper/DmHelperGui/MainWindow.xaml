<Window x:Class="DmHelperGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:databaseTab="clr-namespace:DmHelperGui.View.DatabaseTab"
        xmlns:encounterConfigurationTab="clr-namespace:DmHelperGui.View.EncounterConfigurationTab"
        xmlns:encounterSimulationTab="clr-namespace:DmHelperGui.View.EncounterSimulationTab"
        Title="DM Helper" Height="400" Width="800">

    <TabControl x:Name="TabControl">
        <TabItem Header="Database">
            <databaseTab:DatabaseMainControl></databaseTab:DatabaseMainControl>
        </TabItem>
        <TabItem Header="Encounter Configuration">
            <encounterConfigurationTab:EncounterSelector></encounterConfigurationTab:EncounterSelector>
        </TabItem>
        <TabItem Header="Encounter Simulation">
            <encounterSimulationTab:EncounterSimulation></encounterSimulationTab:EncounterSimulation>
        </TabItem>
    </TabControl>

</Window>



